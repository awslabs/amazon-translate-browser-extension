{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "target": "es2016",
    "module": "commonjs",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client"],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "extension",
    "ava.config.js",
    "copy-assets.js"
  ]
}

{
  "name": "chrome-extension-amazon-translate",
  "displayName": "Amazon Translate",
  "version": "0.5.0",
  "description": "An extension that will auto-translate content in your browser window with Amazon Translate.",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "dev": "rimraf extension/dev && run-p dev:*",
    "dev:prepare": "esno scripts/prepare-dev.ts dev",
    "dev:web": "vite",
    "dev:js": "npm run build:dev -- --watch src",
    "build": "run-s clear build:web build:prepare build:js",
    "build:prepare": "esno scripts/prepare-prod.ts build",
    "build:web": "vite build",
    "build:js": "npm run build:prod -- --minify",
    "build:dev": "tsup src/background src/content --format iife --out-dir extension/dev/dist --no-splitting --onSuccess 'esno scripts/mvsw-dev.ts'",
    "build:prod": "tsup src/background src/content --format iife --out-dir extension/prod/dist --no-splitting --onSuccess 'esno scripts/mvsw-prod.ts'",
    "clear": "rimraf extension/prod",
    "lint": "eslint ./src/ --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.7.0",
    "@ava/typescript": "^3.0.0",
    "@ffflorian/jszip-cli": "^3.1.5",
    "@iconify/json": "^2.1.30",
    "@intlify/vite-plugin-vue-i18n": "^3.4.0",
    "@types/chrome": "^0.0.181",
    "@types/jsdom": "^16.2.13",
    "@types/fs-extra": "^9.0.12",
    "@types/lockr": "^0.8.7",
    "@types/node": "^16.4.1",
    "@types/node-localstorage": "^1.3.0",
    "@types/sjcl": "^1.0.30",
    "@types/webextension-polyfill": "^0.8.3",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vue/compiler-sfc": "^3.2.33",
    "@vueuse/core": "^8.2.6",
    "ava": "^3.15.0",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "esno": "^0.14.1",
    "fs-extra": "^10.0.0",
    "fs-jetpack": "^4.3.0",
    "kolorist": "^1.5.0",
    "lint-staged": "^12.1.7",
    "nock": "^13.2.4",
    "node-localstorage": "^2.2.1",
    "npm-install-peers": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "sass": "^1.43.2",
    "semantic-release": "^19.0.1",
    "svg2png": "^4.1.1",
    "tsup": "^4.12.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.3",
    "unplugin-auto-import": "^0.4.8",
    "unplugin-icons": "^0.14.1",
    "unplugin-vue-components": "^0.19.3",
    "vite": "^2.9.5",
    "vite-plugin-windicss": "^1.8.4",
    "vite-svg-loader": "^3.1.2",
    "vue": "^3.2.33",
    "vue-demi": "^0.12.5",
    "vue-global-api": "^0.4.1",
    "webext-bridge": "^4.0.0",
    "webextension-polyfill-ts": "^0.26.0",
    "windicss": "^3.5.1",
    "commitizen": "^4.2.4",
    "crx": "^5.0.1",
    "cz-conventional-changelog": "^3.3.0"
  },
  "dependencies": {
    "@aws-sdk/client-translate": "^3.37.0",
    "lockr": "^0.9.0-beta.0",
    "vue-i18n": "^9.1.7"
  },  
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  }
}
